#!/usr/bin/env zsh

USAGE="
A dependency search CLI utilizing search.maven.org

Usage:
  dep [artifact query] [flags]

Query keywords:
  g    group
  a    artifact
  v    version
  p    packaging
  l    classifier
  c    class name
  fc   fully qualified class name
  AND  require all terms
  OR   optional terms

Flags:
  --count  number of results (default: 20)"


if [[ "$#" -eq 0 ]]; then
    echo "$USAGE" && exit 1
fi

raw_query="$1"
query="${1// /%20}"
count='20'

shift

while test $# -gt 0; do
    case "$1" in
        -c|--count)  shift; count=$1 ;;
        -h|--help)   echo "$USAGE" && exit ;;
        *)
            echo "Error: invalid option $1"
            echo "$USAGE"
            exit 1
            ;;
    esac
    shift
done

echo "Searching search.maven.org for '$raw_query'"
echo
echo "Browser link:"
echo "  https://search.maven.org/search?q=$query"
echo
echo "Artifacts:"

curl -sSL "https://search.maven.org/solrsearch/select?q=$query&rows=$count&wt=json&core=gav" | jq -r '.response.docs[].id'
